<div class="container mt-3">
  <div class="row">
    <div class="col-12">
    </div>
  </div>

  <div class="row">
      <div class="col-12">
        <div class="cocktail-card mr-4">
          <div class="cocktail-card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(
          https://images.unsplash.com/photo-1589190859807-21bc5319b653?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80
          );"></div>
          <div class="cocktail-card-content pt-4">
            <div class="cocktail-card-title">
              <h4><%= @cocktail.name %></h4>
              <div>
                <table class="table-recipe">
                  <tbody>
                    <thead>
                      <th>Ingredient</th>
                      <th>Description</th>
                      <th>Action</th>
                    </thead>
                    <% @cocktail.doses.each do |dose| %>
                      <tr>
                        <td><%= dose.ingredient.name %></td>
                        <td><%= dose.description %></td>
                        <td>
                          <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                            <i class="fa fa-trash destroy_dose"></i>
                          <% end %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>

          <%# <div class="cocktail-card-actions"> %>
            <%# <%= link_to "More info", cocktail_path(cocktail) %>
            <%# <a class="ml-3 text-warning" href="/cocktails/4010/edit">Edit</a> %>
            <%# <a data-confirm="Are you sure?" class="ml-3 text-danger" rel="nofollow" data-method="delete" href="/cocktails/4010">Remove</a> %>
          <%# </div> %>

        </div>
      </div>
  </div>