

<div class="container mt-3">
  <div class="row py-4">
    <div class="col-12 py-4">
      <h1 style="color: white">Discover our <%= @cocktails.count %> Crazy Cocktails</h1>
    </div>
  </div>

  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-4">
        <div class="cocktail-card mr-4">
          <div class="cocktail-card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(
          https://images.unsplash.com/photo-1589190859807-21bc5319b653?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80
          );"></div>
          <div class="cocktail-card-content pt-4">
            <div class="cocktail-card-title">
              <h4><%= cocktail.name %></h4>
              <%= link_to "show me", cocktail_path(cocktail), :class => "link-to-cocktail" %>
              <div class="d-inline-flex">
              </div>
            </div>
          </div>
        </div>
      </div>
    <%end%>
      <div class="col-4">
        <div class="cocktail-card mr-4">
          <div class="cocktail-card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(
          https://images.unsplash.com/photo-1514447084304-976bcf033264?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80);"></div>
          <div class="cocktail-card-content pt-4">
            <div class="cocktail-card-title">
              <h4>Add a new cocktail!</h4>
              <%= link_to "add my recipe", new_cocktail_path, :class => "link-to-cocktail" %>
              <div class="d-inline-flex">
              </div>
            </div>
          </div>
        </div>
      </div>
  </div>